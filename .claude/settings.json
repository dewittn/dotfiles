{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Don't forget to check the docs, they are here to help us avoid mistakes.\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git diff:*)",
      "Bash(git branch:*)",
      "Bash(git ls-tree:*)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(stow:*)",
      "Bash(nvim:*)",
      "Bash(chmod +x:*)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(open -a \"Marked\" *)",
      "Bash(gh issue *)",
      "Bash(gh pr:*)",
      "Bash(gh workflow:*)",
      "Bash(gh run:*)"
    ],
    "deny": [
      "Read(docker-*op*.yaml)"
    ],
    "ask": [
      "Bash(docker volume rm *)"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest"
}

{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(wc *)",
      "Bash(tree *)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(chmod +x *)",
      "Bash(stow *)",
      "Bash(open -a \"Marked\" *)",
      "Bash(gh *)",
      "mcp__pencil"
    ],
    "deny": [
      "Read(docker-*op*.yaml)"
    ],
    "ask": [
      "Bash(docker volume rm *)"
    ],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify-pushover.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Don't forget to check the docs, they are here to help us avoid mistakes.\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true,
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest"
}